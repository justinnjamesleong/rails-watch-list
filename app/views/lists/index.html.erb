<h2>Movies List</h2>>
<ul>
  <% @lists.each do |list| %>
    <% if list.photo.attached? %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')"></div>
    <% end %>

    <li><%= link_to list.name, list_path(list) %>
      <%= link_to "Delete",
            list_path(list),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
    </li>

  <% end %>

</ul>

